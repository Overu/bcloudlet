<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style type="org.cloudlet.web.core.client.mobile.HeaderView.HeaderViewStyle">
    .root {
      position: relative;
      z-index: 100;
      padding: 0 0 25px;
      height: 62px;
      width: 1010px;
      margin: 0 auto;
    }
    
    .logo {
      float: left;
      width: 175px !important;
      height: 62px !important;
    }
    
    .nav {
      margin: 0 0 0 227px;
      padding-top: 33px;
    }
    
    .nav>ul>li {
      display: inline;
      float: left;
      padding: 0 12px;
      background-position: right -599px;
      font: 700 16px/20px STheiti, microsoft yahei;
      color: rgb(112, 70, 40);
      cursor: pointer;
    }
    
    .nav>ul>li:HOVER {
      color: rgb(155, 130, 112);
    }
    
    .navactive {
      color: rgb(255, 106, 4) !important;
    }
    
    .search {
      position: absolute;
      right: 145px;
      top: 28px;
      width: 200px;
      z-index: 100;
      text-align: left;
    }
    
    .search>a {
      display: block;
      height: 28px;
      border-radius: 14px;
      background-position: 6px -91px;
      background-color: rgb(220, 215, 210);
    }
    
    .search>a>input {
      width: 146px;
      height: 24px;
      margin-left: 28px;
      border: 0;
      background: transparent;
      line-height: 20px;
      padding-top: 3px;
      color: rgb(153, 153, 153);
      font-family: 'microsoft yahei';
      outline: 0;
    }
    
    .search>a>span {
      display: none;
      position: absolute;
      right: 0;
      top: 0;
      height: 28px;
      width: 22px;
      background-position: 0 -63px;
      cursor: pointer;
    }
    
    .search>a:HOVER, .inputting {
      -webkit-transition: background-color .08s ease-in;
      background-position: 6px -130px!important;
      background-color: rgb(102, 102, 102)!important;
      text-decoration: none!important;
    }
    
    .search>a:HOVER>input, .inputting>input {
      color: white!important;
    }
  </ui:style>

  <g:HTMLPanel addStyleNames="{style.root}">
    <div ui:field="logoElm" class="{style.logo}"></div>
    <div class="{style.nav}">
      <ul ui:field="navUlElm">
        <li ui:field="indexElm">首页</li>
        <li ui:field="rankElm">排行榜</li>
        <li ui:field="bargainElm">
          精品
          <span style="font-family: 'simsun';">·</span>
          特价
        </li>
        <li ui:field="categoryElm">分类</li>
        <li ui:field="clientElm">客户端</li>
        <li ui:field="bbsElm">论坛</li>
      </ul>
    </div>
    <div class="{style.search}">
      <a herf="#">
        <input ui:field="searchTextElm" type="text" placeholder="搜索书名或者作者..." />
        <span></span>
      </a>
    </div>
  </g:HTMLPanel>
</ui:UiBinder> 