<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .root {
      width: 1010px;
      margin: 0 auto;
    }
    
    .bg {
      position: relative;
      zoom: 1;
      min-height: 570px;
      width: 1010px;
      margin: 0 auto;
      text-align: left;
    }
    
    .bgr {
      float: right;
      width: 100%;
      margin-left: -239px;
    }
    
    .bgr>div {
      margin-left: 239px;
    }
    
    .bgf {
      position: relative;
      float: left;
      width: 230px;
    }
    
    .ft {
      margin: 55px auto 0;
      width: 1010px;
      text-align: left;
    }
  </ui:style>

  <g:HTMLPanel addStyleNames="{style.root}">
    <g:HTMLPanel ui:field="hd"></g:HTMLPanel>
    <div class="{style.bg}">
      <div class="{style.bgr}">
        <g:HTMLPanel ui:field="bgr"></g:HTMLPanel>
      </div>
      <g:HTMLPanel ui:field="bgl" addStyleNames="{style.bgf}"></g:HTMLPanel>
      <g:HTMLPanel ui:field="ft" addStyleNames="{style.ft}"></g:HTMLPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder> 