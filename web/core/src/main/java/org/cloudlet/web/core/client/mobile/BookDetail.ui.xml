<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .root {
      overflow: hidden;
      position: absolute;
      display: -webkit-box;
      width: 100%;
      height: 100%;
      top: 0;
      right: 0;
      left: 0;
      bottom: 0;
    }
    
    .left {
      width: 300px;
      border: 1px outset;
      -webkit-box-orient: vertical;
      display: -webkit-box;
      -webkit-box-align: center;
    }
    
    .image {
      width: 150px !important;
      height: 250px !important;
      background-color: #CCC;
      padding: 6px;
      margin: 10px;
      background-size: cover !important;
    }
    
    .author {
      width: 150px;
      border-top: 1px outset #979797;
      margin: 14PX;
      padding: 20px;
    }
    
    .root>div:last-child {
      overflow: auto;
      -webkit-box-flex: 1;
      display: -webkit-box;
    }
    
    .root>div:last-child>div {
      margin: 9px;
      padding: 5px 0 5px 16px;
      border-radius: 9px;
      border: 2px solid gray;
      -webkit-box-flex: 1;
      height: 100%;
    }
  </ui:style>

  <g:HTMLPanel addStyleNames="{style.root}">
    <g:HTMLPanel addStyleNames="{style.left}">
      <g:Image ui:field="bookImage" addStyleNames="{style.image}"></g:Image>
      <div><g:Button ui:field="buyButton">buy</g:Button></div>
      <div class="{style.author}">
        <table>
          <tr>
            <td>作者：</td>
            <td ui:field="authorElm"></td>
          </tr>
          <tr>
            <td>版权：</td>
            <td>retech</td>
          </tr>
          <tr>
            <td>出版：</td>
            <td>2012-10-10</td>
          </tr>
          <tr>
            <td>更新:</td>
            <td>2012-10-10</td>
          </tr>
          <tr>
            <td>大小:</td>
            <td>4 MB</td>
          </tr>
        </table>
      </div>
    </g:HTMLPanel>
    <g:SimplePanel>
      <g:HTMLPanel ui:field="detail"></g:HTMLPanel>
    </g:SimplePanel>
  </g:HTMLPanel>
</ui:UiBinder> 