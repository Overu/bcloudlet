<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style type="org.cloudlet.web.core.client.mobile.SliderView.SliderViewStyle">
    .root {
      position: relative;
      zoom: 1;
      overflow: hidden;
      margin: 1px 3px 5px 3px;
      cursor: pointer;
      box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.2);
    }
    
    .root:HOVER>a {
      display: block;
    }
    
    .slider {
      position: relative;
      zoom: 1;
      margin: 0 auto;
      overflow: hidden;
      list-style-type: none;
      -webkit-transition: all .16s ease-in-out;
    }
    
    .slider>li {
      float: left;
    }
    
    .slidertag {
      list-style-type: none;
      position: absolute;
      right: 0;
      bottom: 10px;
      text-align: center;
      z-index: 3;
      font-family: arial, helvetica, sans-serif;
      font-size: 12px;
    }
    
    .slidertag>li {
      display: inline;
      float: none;
      margin-right: 8px;
    }
    
    .slidertag>li>a {
      box-shadow: inset 0 0 2px 0 rgba(0, 0, 0, .3);
      color: #fff;
      display: inline-block;
      width: 16px;
      height: 16px;
      line-height: 16px;
      background: rgba(0, 0, 0, .4);
    }
    
    .slidertag>li>a:HOVER, .currenttag>a {
      background: #fff!important;
      color: #ff6a04!important;
    }
    
    @sprite 
    .base {
      gwt-image: "arr";
      display: none;
      position: absolute;
      height: 60px;
      width: 38px;
      margin-top: -30px;
      opacity: .4;
      overflow: hidden;
      text-indent: -9999px;
      top: 50%;
    }
    
    .base:ACTIVE {
      opacity: 1.0;
    }
    
    .previous {
      left: 3px;
      background-position: left top;
    }
    
    .next {
      left: auto;
      right: 3px;
      background-position: right top;
    }
  </ui:style>
  
  <ui:image field="arr" />
  <g:HTMLPanel ui:field="root" addStyleNames="{style.root}">
    <ul ui:field="slider" class="{style.slider}"></ul>
    <a href="#" ui:field="previous" class="{style.base} {style.previous}">Previous</a>
    <a href="#" ui:field="next" class="{style.base} {style.next}">Next</a>
    <ul ui:field="sliderTag" class="{style.slidertag}"></ul>
  </g:HTMLPanel>
</ui:UiBinder> 